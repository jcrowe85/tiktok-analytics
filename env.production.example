# Production Environment Variables
# Copy this to .env on your VPS and fill in your values

# TikTok API Credentials
TIKTOK_CLIENT_KEY=your_client_key_here
TIKTOK_CLIENT_SECRET=your_client_secret_here
TIKTOK_REDIRECT_URI=https://analytics.tryfleur.com/callback

# Auth tokens (populated after running 'npm run auth')
TIKTOK_ACCESS_TOKEN=
TIKTOK_REFRESH_TOKEN=

# Server config
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://tiktok_user:your_password@localhost:5432/tiktok_analytics

# Redis (for job queue)
REDIS_URL=redis://localhost:6379
MAX_CONCURRENT_JOBS=3

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here
RAPIDAPI_KEY=your-rapidapi-key-here

# Google Vision API (choose one of these two options)
# Option 1: Service Account JSON file path
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# Option 2: Direct API key
# GOOGLE_VISION_API_KEY=your-google-vision-api-key

# Optional: Add monitoring/alerting
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# EMAIL_ALERTS_ENABLED=true
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
